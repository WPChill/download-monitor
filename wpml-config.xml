    <custom-field action="translate">_members_only</custom-field>
    <custom-field action="translate">_redirect_only</custom-field>
    <custom-field action="translate">_new_tab</custom-field>
  </custom-fields>
  <shortcodes>
    <shortcode>
      <tag>downloads</tag>
      <attributes>
        <attribute>category</attribute>
      </attributes>
    </shortcode>
  </shortcodes>
